<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.2//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sm24soft.repository.NewsRepository">
	<resultMap type="com.sm24soft.entity.News" id="NewsResultMap"
		extends="com.sm24soft.repository.Repository.BaseResultMap">
		<result column="link_url" property="linkUrl" />
		<result column="description" property="description" />
		
		<association column="supplier_email_address"
			property="supplier"
			javaType="com.sm24soft.entity.Supplier"
			select="com.sm24soft.repository.SupplierRepository.findByEmailAddress" />
	</resultMap>
	
	<sql id="findNewsSQL">
		SELECT `news`.`id`,
		    `news`.`link_url`,
		    `news`.`description`,
		    `news`.`supplier_email_address`,
		    `news`.`delete_flg`,
		    `news`.`created_at`,
		    `news`.`created_user_id`,
		    `news`.`updated_at`,
		    `news`.`updated_user_id`
		FROM `news`
	</sql>
	
	<select id="findAll" resultMap="NewsResultMap">
		<include refid="findNewsSQL" />
		WHERE `news`.`delete_flg` = "0"
		ORDER BY `news`.`updated_at` DESC;
	</select>
	
	<select id="findById" resultMap="NewsResultMap">
		<include refid="findNewsSQL" />
		WHERE `news`.`id` = #{id};
	</select>
	
	<select id="findAllBySupplierEmailAddress" resultMap="NewsResultMap">
		<include refid="findNewsSQL" />
		WHERE `news`.`supplier_email_address` = #{emailAddress}
			AND `news`.`delete_flg` = "0"
		ORDER BY `news`.`updated_at` DESC;
	</select>
	
	<insert id="save" parameterType="com.sm24soft.entity.News"
		useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		INSERT INTO `news`
		(
			`link_url`,
			`description`,
			`supplier_email_address`,
			`delete_flg`,
			`created_at`,
			`created_user_id`,
			`updated_at`,
			`updated_user_id`
		)
		VALUES
		(
			#{linkUrl},
			#{description},
			#{supplier.email},
			#{deleteFlg},
			#{createdAt},
			#{createdUserId},
			#{updatedAt},
			#{updatedUserId}
		);
	</insert>
	
	<update id="update" parameterType="com.sm24soft.entity.News">
		UPDATE `news`
		SET
			`link_url` = #{linkUrl},
			`description` = #{description},
			`supplier_email_address` = #{supplier.email},
			`delete_flg` = #{deleteFlg},
			`updated_at` = NOW(),
			`updated_user_id` = #{updatedUserId}
		WHERE `id` = #{id};
	</update>
	
	<delete id="deleteById">
		UPDATE `news`
		SET
			`delete_flg` = "1",
			`updated_at` = NOW()
		WHERE `id` = #{id};
	</delete>
	
</mapper>